@inherits LayoutComponentBase
@inject NavigationManager _navManager

<Layout>
    <Header>
        <Header>Панель администратора</Header>    
    </Header>
    <Layout>
        <Sider>
            <Menu Mode="MenuMode.Inline">
                <MenuItem RouterLink=@RouteLink("Equipments")>Оборудование</MenuItem>
                <MenuItem RouterLink=@RouteLink("Workplaces")>Рабочие места</MenuItem>
            </Menu>
        </Sider>
        <Content Style="padding: 24px; margin: 0">
            @Body
        </Content>
    </Layout>
</Layout>

@code
{
    public string RouteLink(string table) => $"/{_navManager.Uri.Split("/")[3]}/Admin/{table}";
    
}
